<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ephraimhammer.jct.customercarrental.control.activity.AddCommandActivity"
    android:background="@drawable/gradient_backgroound"
    >

    <LinearLayout
        android:id="@+id/generalLayout"
        android:layout_width="338dp"
        android:layout_height="125dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="148dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/shadow_r_l"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/commandDetailBakcground"
            >

            <ImageView
                android:id="@+id/carIconImageView"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:weightSum="1"
                app:srcCompat="@drawable/mini_car_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:background="@color/commandDetailBakcground"

            >

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="6dp">


                <TextView
                    android:id="@+id/brandtextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    tools:text="Brand" />


                <TextView
                    android:id="@+id/kmTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="NbR Km" />

                <Switch
                    android:id="@+id/isFreeSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:checked="true"
                    android:text="free   "
                    tools:checked="false" />

                <TextView
                    android:id="@+id/priceTxtView"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="Price $ / day"></TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"


                    >

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    >

                    <ImageView
                        android:id="@+id/fuelImageView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:padding="2dp"
                        app:srcCompat="@drawable/fuel" />

                    <TextView
                        android:id="@+id/fueltextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:layout_weight="1"

                        android:gravity="left"
                        android:text="TextView" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/ACImageView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ac" />

                    <TextView
                        android:id="@+id/ACtextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:layout_weight="1"

                        android:gravity="left"
                        android:text="TextView" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    >

                    <ImageView
                        android:id="@+id/BigLugimageView9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:padding="2dp"
                        app:srcCompat="@drawable/bigluggage" />

                    <TextView
                        android:id="@+id/BigLuggtextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:layout_weight="0.5"

                        android:gravity="left"
                        android:text="5" />

                    <ImageView
                        android:id="@+id/SmallimageView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:padding="2dp"
                        app:srcCompat="@drawable/smallugage" />

                    <TextView
                        android:id="@+id/smalLugTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:layout_weight="1"

                        android:gravity="left"
                        android:text="5" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"

                    >

                    <ImageView
                        android:id="@+id/passengerImageView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ninja" />

                    <TextView
                        android:id="@+id/passengerTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:layout_weight="1"

                        android:gravity="left"
                        android:text="TextView" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/addCommandbutton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="136dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/add_background_button"
        android:text="I WANT IT !"
        android:textColor="@color/text_button_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generalLayout" />

</android.support.constraint.ConstraintLayout>
