<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ephraimhammer.jct.customercarrental.control.activity.AddCommandActivity">

    <ImageView
        android:id="@+id/carIconImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mini_car_icon" />

    <LinearLayout
        android:id="@+id/generalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carIconImageView"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="8dp">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingTop="6dp"
            android:paddingStart="4dp">


            <TextView
                android:id="@+id/brandtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                tools:text="Brand" />


            <TextView
                android:id="@+id/kmTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="NbR Km" />

            <TextView
                android:id="@+id/priceTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Price $ / day" />

            <Switch
                android:id="@+id/isFreeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:checked="true"
                android:text="free   "
                tools:checked="false" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                >

                <ImageView
                    android:id="@+id/fuelImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/fuel" />

                <TextView
                    android:id="@+id/fueltextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"

                    android:gravity="left"
                    tools:text="Fuel" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/ACImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ac" />

                <TextView
                    android:id="@+id/ACtextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="left"
                    tools:text="AC" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                >

                <ImageView
                    android:id="@+id/BigLugimageView9"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/bigluggage" />

                <TextView
                    android:id="@+id/BigLuggtextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="left"
                    android:text="5" />

                <ImageView
                    android:id="@+id/SmallimageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/smallugage" />

                <TextView
                    android:id="@+id/smalLugTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="left"
                    android:text="5" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                >

                <ImageView
                    android:id="@+id/passengerImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ninja" />

                <TextView
                    android:id="@+id/passengerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="left"
                    android:text="TextView" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/addCommandbutton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="I WANT IT !"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generalLayout" />

</android.support.constraint.ConstraintLayout>
