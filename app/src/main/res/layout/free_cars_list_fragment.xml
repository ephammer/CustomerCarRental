<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/shadow_b"
    tools:context="com.ephraimhammer.jct.customercarrental.control.fragment.CarFreeListFragment"
    android:layout_margin="16dp"

    >
    <SearchView
        android:id="@+id/search_view_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corner_all"
        android:visibility="visible"
        android:layout_marginBottom="8dp"
        ></SearchView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rootViewCarFreeFragment"></ListView>



</LinearLayout>