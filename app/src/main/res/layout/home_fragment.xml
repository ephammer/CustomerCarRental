<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ephraimhammer.jct.customercarrental.control.activity.MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">







            <Button
                android:id="@+id/button_free_cars_by_rangeKm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transition_effect_home_frag_right_button"
                android:text="Find a car near you"
                />


        <android.widget.SearchView
            android:id="@+id/search_view_home"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@drawable/corner_bot_left_right"
            >

        </android.widget.SearchView>
    </LinearLayout>


</RelativeLayout>
