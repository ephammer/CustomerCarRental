<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ephraimhammer.jct.customercarrental.control.activity.MainActivity"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/button_free_cars_by_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/corner_all"
                android:text="By branch" />

            <Button
                android:id="@+id/button_free_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:background="@drawable/corner_left_top_right"
                android:text="All"
                app:layout_constraintEnd_toEndOf="@+id/button_free_cars_by_branch"
                app:layout_constraintStart_toStartOf="@+id/button_free_cars_by_branch"
                app:layout_constraintTop_toBottomOf="@+id/button_free_cars_by_branch" />

            <Button
                android:id="@+id/button_free_cars_by_rangeKm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_all"
                android:text="Distance" />


        </LinearLayout>

        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_bottom_left_right"
            android:gravity="left">

        </android.support.v7.widget.SearchView>
    </LinearLayout>


</RelativeLayout>
